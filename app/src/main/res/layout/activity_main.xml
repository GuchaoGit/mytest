<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.hardcattle.myapplication.MainActivity">
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_slide_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="侧边菜单"
                android:textSize="20sp" />

            <com.youth.banner.Banner
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="200dp" />

            <AutoCompleteTextView
                android:id="@+id/auto_complete_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:completionThreshold="1" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onLayoutTest"
                android:text="布局测试" />

            <Button
                android:id="@+id/btn_gson_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gson测试"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/btn_select_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下拉单选测试"
                android:textAllCaps="false" />
            <Button
                android:id="@+id/btn_sort_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="排序测试"
                android:textAllCaps="false"/>
            <Button
                android:id="@+id/btn_scroll_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="左右可滑动的Table"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/btn_scan_code_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="二维码扫描测试"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_nfc_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NFC"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_keyboard_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="自定义键盘"
                android:textAllCaps="false" />
            <Button
                android:id="@+id/btn_notice_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="通知测试"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_map_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="百度地图测试"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_sign_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="签名控件测试"
                android:textAllCaps="false" />
            <com.example.hardcattle.widget.CustomSpinner
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@drawable/spinner_selector"
                android:paddingLeft="10dp"
                app:assetsName="zylb">
            </com.example.hardcattle.widget.CustomSpinner>
            <com.example.hardcattle.widget.autocompleteview.AutoCompleteView
                android:id="@+id/acv"
                android:layout_width="200dp"
                android:layout_height="wrap_content">
            </com.example.hardcattle.widget.autocompleteview.AutoCompleteView>
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.example.hardcattle.widget.IconFriendlyRadioButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            app:drawableTop="@drawable/ic_launcher_background"
            android:text="菜单1"
            android:gravity="center"
            >

        </com.example.hardcattle.widget.IconFriendlyRadioButton>
        <com.example.hardcattle.widget.IconFriendlyRadioButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            app:drawableTop="@drawable/ic_launcher_background"
            android:text="菜单2"
            android:gravity="center"
            >

        </com.example.hardcattle.widget.IconFriendlyRadioButton>
        <com.example.hardcattle.widget.IconFriendlyRadioButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            app:drawableSize="50dp"
            app:drawableTop="@drawable/ic_launcher_background"
            android:gravity="center"
            >

        </com.example.hardcattle.widget.IconFriendlyRadioButton>
        <com.example.hardcattle.widget.IconFriendlyRadioButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            app:drawableTop="@drawable/ic_launcher_background"
            android:text="菜单4"
            android:gravity="center"
            >

        </com.example.hardcattle.widget.IconFriendlyRadioButton>
        <com.example.hardcattle.widget.IconFriendlyRadioButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            app:drawableTop="@drawable/ic_launcher_background"
            android:text="菜单5"
            android:gravity="center"
            >

        </com.example.hardcattle.widget.IconFriendlyRadioButton>

    </RadioGroup>
</LinearLayout>


