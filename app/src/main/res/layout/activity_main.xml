<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.hardcattle.myapplication.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_slide_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="侧边菜单"
            android:textSize="20sp" />

        <com.youth.banner.Banner
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <AutoCompleteTextView
            android:id="@+id/auto_complete_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:completionThreshold="1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onLayoutTest"
            android:text="布局测试" />

        <Button
            android:id="@+id/btn_gson_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gson测试"
            android:textAllCaps="false"/>
        <Button
            android:id="@+id/btn_sort_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="排序测试"
            android:textAllCaps="false"/>
        <Button
            android:id="@+id/btn_scroll_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="左右可滑动的Table"
            android:textAllCaps="false"/>
        <com.example.hardcattle.widget.CustomSpinner
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/spinner_selector"
            android:paddingLeft="10dp"
            app:assetsName="zylb">
        </com.example.hardcattle.widget.CustomSpinner>
        <com.example.hardcattle.widget.autocompleteview.AutoCompleteView
            android:id="@+id/acv"
            android:layout_width="200dp"
            android:layout_height="wrap_content">
        </com.example.hardcattle.widget.autocompleteview.AutoCompleteView>
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
