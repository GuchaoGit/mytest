<?xml version="1.0" encoding="utf-8"?>
<Keyboard xmlns:android="http://schemas.android.com/apk/res/android"
    android:horizontalGap="3px"
    android:keyHeight="45dp"
    android:keyWidth="10%p"
    android:verticalGap="3px">
    <!--    // KeyBoard标签下的keyWidth="10%p"表示下面的每个键宽度占parent宽度的10%，xxxGap属性是键与键之间的水平和垂直间隔-->

    <Row>
        <Key
            android:codes="49"
            android:keyEdgeFlags="left"
            android:keyLabel="1" />
        <Key
            android:codes="50"
            android:keyLabel="2" />
        <Key
            android:codes="51"
            android:keyLabel="3" />
        <Key
            android:codes="52"
            android:keyLabel="4" />
        <Key
            android:codes="53"
            android:keyLabel="5" />
        <Key
            android:codes="54"
            android:keyLabel="6" />
        <Key
            android:codes="55"
            android:keyLabel="7" />
        <Key
            android:codes="56"
            android:keyLabel="8" />
        <Key
            android:codes="57"
            android:keyLabel="9" />
        <Key
            android:codes="48"
            android:keyEdgeFlags="right"
            android:keyLabel="0" />
    </Row>

    <Row>
        <Key
            android:codes="65"
            android:keyEdgeFlags="left"
            android:keyLabel="A" />
        <Key
            android:codes="67"
            android:keyLabel="C" />
        <Key
            android:codes="76"
            android:keyLabel="L" />
        <Key
            android:codes="78"
            android:keyLabel="N" />
        <Key
            android:codes="79"
            android:keyLabel="O" />
        <Key
            android:codes="82"
            android:keyLabel="R" />
        <Key
            android:codes="85"
            android:keyLabel="U" />
        <Key
            android:codes="87"
            android:keyLabel="W" />
        <Key
            android:codes="88"
            android:keyLabel="X" />
        <Key
            android:codes="90"
            android:keyEdgeFlags="right"
            android:keyLabel="Z" />
    </Row>
    <!--
        // Key标签下的keyWidth属性会覆盖parent中赋的值，isRepeatable属性表示是长按时是否重复输入
    -->

    <Row android:rowEdgeFlags="bottom">
        <Key
            android:codes="-2"
            android:keyLabel="Abc"
            android:keyWidth="20%p" />
        <Key
            android:codes="44"
            android:keyLabel=","
            android:keyWidth="15%p" />
        <Key
            android:codes="-5"
            android:isRepeatable="true"
            android:keyLabel="Del"
            android:keyWidth="30%p" />
        <Key
            android:codes="42"
            android:keyLabel="*"
            android:keyWidth="15%p" />
        <Key
            android:codes="-4"
            android:keyEdgeFlags="right"
            android:keyLabel="完成"
            android:keyWidth="20%p" />
    </Row>
</Keyboard>