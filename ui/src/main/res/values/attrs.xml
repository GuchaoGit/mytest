<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="ViewCommonTitle">
        <attr name="titles" format="reference"></attr>
        <attr name="index_type_is_num" format="boolean"></attr>
        <attr name="background_color" format="color"></attr>
        <attr name="title_color" format="color"></attr>
        <attr name="title_select_color" format="color"></attr>
    </declare-styleable>
    <!--圆角ImageView-->
    <declare-styleable name="RoundImageView">
        <attr name="borderRadius" />
        <attr name="type" />
    </declare-styleable>
    <attr name="borderRadius" format="dimension" />
    <attr name="type">
        <enum name="circle" value="0" />
        <enum name="round" value="1" />
    </attr>


    <declare-styleable name="MaxHeightView">
        <attr name="maxHeight" format="dimension" />
    </declare-styleable>

    <declare-styleable name="DropDownView">
        <attr name="itemArray" format="reference" />
        <attr name="canSelect" format="boolean" />
    </declare-styleable>

    <declare-styleable name="ViewSearch">
        <attr name="edit_hint" format="string|reference"></attr>
        <attr name="style">
            <enum name="icon_style" value="0" />
            <enum name="button_style" value="1" />
        </attr>
    </declare-styleable>
</resources>