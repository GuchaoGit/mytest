<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="50dp"
    android:padding="8dp">

    <EditText
        android:id="@+id/et_search"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dimen_10dp"
        android:layout_toLeftOf="@+id/btn_search_view"
        android:background="@drawable/shape_stroke_oval_gray"
        android:hint="请输入"
        android:imeOptions="actionSearch"
        android:paddingLeft="@dimen/dimen_10dp"
        android:paddingRight="@dimen/dimen_10dp"
        android:singleLine="true" />

    <Button
        android:id="@+id/btn_search_view"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/selector_oval_btn_click_bg_light_blue"
        android:padding="5dp"
        android:text="搜索"
        android:textColor="@color/colorWhite" />

    <Button
        android:id="@+id/btn_clear_search_view"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:layout_toStartOf="@id/btn_search_view"
        android:background="@drawable/selector_btn_delete" />
</RelativeLayout>
